<p style="color: green"><%= notice %></p>

<h1>Friends</h1>
<table class="table" >
  <thead>
  <tr>
    <th>Name</th>
    <th scope="col">Email</th>
    <th scope="col">Phone</th>
    <th scope="col">Twitter</th>
    <th scope="col">User ID</th>
    <th scope="col"></th>

  </tr>
  </thead>
  <tbody>
  <% @friends.each do |friend| %>
  <tr>
    <td><%= link_to friend.first_name + ' ' + friend.last_name, friend %></td>
    <td><%= friend.email %></td>
    <td><%= friend.phone %></td>
    <td><%= friend.twitter %></td>
    <td><%= friend.user_id %></td>
    <td><%= link_to 'Delete', friend, data: { turbo_method: :delete }, class: "btn btn-outline-danger btn-sm" %></td>

  </tr>
  <%end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class: "btn btn-primary" %>


